#!/bin/bash
#put generated file in equivalent directory under out/

dir=$(dirname $1)
file=$(basename $1)
outdir=out/$dir

if [[ $file == *.org ]]
then
    outdir=out/$dir
    outfile=$(basename $file .org).html
    # echo "$dir/$file"
    # echo "$outdir/$outfile"
    # echo "#######"
    mkdir -p "$outdir"
    pandoc --template=test.template -S -s --mathjax --toc "$dir/$file" -o "$outdir/$outfile"
    # pandoc -S -s --toc -c /out/notes.css --mathjax "$dir/$file" -o "$outdir/$outfile"
    echo "built $file"
else
    mkdir -p "$outdir"
    cp "$dir/$file" "$outdir/"
    echo "copied $file"

fi
